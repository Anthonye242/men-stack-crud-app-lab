<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= car ? (car.make + ' ' + car.model) : 'All Cars' %></title>
</head>
<body>
    <% if (car) { %>
        <h1><%= car.make %> <%= car.model %></h1>
        <p>Year: <%= car.year %></p>
        <p>Color: <%= car.color %></p>
        <p>Price: $<%= car.price %></p>
        <p>Total Miles: <%= car.totalMiles %></p>
        <p>Fuel Type: <%= car.fuelType %></p>
        <a href="/cars">Back to all cars</a>
    <% } else if (cars && cars.length > 0) { %>
        <h1>All Cars</h1>
        <ul>
            <% cars.forEach(car => { %>
                <li>
                    <a href="/cars/<%= car._id %>"><%= car.make %> <%= car.model %> - <%= car.year %></a>
                    <form action="/cars/<%= car._id %>/delete" method="POST" style="display:inline;">
                        <button type="submit" onclick="return confirm('Are you sure you want to delete this car?');">Delete</button>
                    </form>
                </li>
            <% }) %>
        </ul>
        <a href="/cars/new">Add New Car</a>
    <% } else { %>
        <h1>No Cars Found</h1>
        <a href="/cars/new">Add New Car</a>
    <% } %>
</body>
</html>



